#!/bin/sh
BRANCH_NAME=$(git rev-parse --abbrev-ref HEAD)

# Allowed branch name formats: feature/*, hotfix/*, release/*
if [[ ! "$BRANCH_NAME" =~ ^(feature|hotfix|release)\/[a-z0-9_\-]+$ && "$BRANCH_NAME" != "main" ]]; then
  echo "‚ùå Invalid branch name: '$BRANCH_NAME'"
  echo "üîπ Allowed formats: feature/{name}, hotfix/{name}, release/{version}"
  exit 1
fi

echo "‚úÖ Branch name is valid: '$BRANCH_NAME'"